<div class="col-sm-10">
	<div class="holder center mt100 p15 bg25">
		<h3 class="left mt0">Sign up</h3> 
		<h5 class="left mb15">Enter your information below to get started</h5> 
		<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name),  label_col: "col-sm-2", control_col: "col-sm-10") do |f| %>
		<%= devise_error_messages! %>

		<div><%= f.text_field :name, autofocus: true, hide_label: :true, placeholder: "Name"   %></div>

			<div><%= f.email_field :email, hide_label: :true, placeholder: "Email"   %></div>

		<div><%= f.password_field :password, autocomplete: "off", hide_label: :true, placeholder: "Password"   %></div>

		<div><%= f.password_field :password_confirmation, autocomplete: "off", hide_label: :true, placeholder: "Confirm password"   %></div>
		
		<div class="right mb10"><%= check_box_tag(:terms_service) %> <%= label_tag(:terms_service, "I agree to the terms of service") %></div>


		<div class="right"><%= f.submit "Create account", class: "btn btn-primary" %> <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button></div>

		<% end %>
	</div>
</div>
